{
    "version": 2,
    "builds": [
      { "src": "web-flask/app.py", "use": "@now/python" }
    ],
    "routes": [
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/(.*)", "dest": "web-flask/app.py" }
    ],
    "env": {
      "FLASK_ENV": "production",
      "SECRET_KEY": "<your-secret-key>",
      "DATABASE_URL": "<your-database-url>"
    }
  }
  